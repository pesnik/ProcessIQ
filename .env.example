# ProcessIQ Environment Configuration
# Copy this file to .env and update with your settings

# Environment
ENVIRONMENT=development
DEBUG=true
VERSION=0.1.0

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/processiq
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# AI/ML Service Configuration
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Local Qwen2.5-VL Configuration
QWEN_MODEL_PATH=/path/to/qwen2.5-vl-model
QWEN_MODEL_SIZE=7B
LOCAL_MODEL_CACHE_DIR=./models
USE_GPU=true
MAX_BATCH_SIZE=4

# Web Automation Configuration
DEFAULT_TIMEOUT=30
HEADLESS=true
BROWSER_POOL_SIZE=5
PREFER_TRADITIONAL=true
VISION_FALLBACK=true
LEARNING_ENABLED=false

# Storage Configuration
DATA_DIRECTORY=./data
MAX_FILE_SIZE_MB=100

# Vector Database (for AI features)
VECTOR_DB_URL=http://localhost:8080
VECTOR_DB_TYPE=weaviate

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
RATE_LIMIT_PER_MINUTE=100
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# Plugin Configuration
PLUGIN_DIRECTORY=./plugins

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/processiq.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Cloud Storage (Optional)
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Azure Blob Storage
AZURE_ACCOUNT_NAME=your_azure_account
AZURE_ACCOUNT_KEY=your_azure_key
AZURE_CONTAINER_NAME=your_container

# Google Cloud Storage
GCS_PROJECT_ID=your_gcs_project
GCS_CREDENTIALS_PATH=./config/gcs-credentials.json
GCS_BUCKET_NAME=your_bucket

# Monitoring and Analytics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@processiq.com

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret
WEBHOOK_TIMEOUT=30

# Rate Limiting for External APIs
# Per connector rate limits
API_RATE_LIMIT_PER_SECOND=10
API_RATE_LIMIT_PER_MINUTE=600
API_RATE_LIMIT_PER_HOUR=10000

# Development Settings
DEV_AUTO_RELOAD=true
DEV_SHOW_SQL=false
DEV_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Production Settings
PROD_WORKERS=4
PROD_MAX_CONNECTIONS=100
PROD_SSL_CERT_PATH=./ssl/cert.pem
PROD_SSL_KEY_PATH=./ssl/key.pem

# Feature Flags
ENABLE_WEB_AUTOMATION=true
ENABLE_AI_PROCESSING=true
ENABLE_VISION_MODELS=true
ENABLE_LEARNING_MODE=false
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true

# Plugin-Specific Configuration
# Web Connector
WEB_CONNECTOR_STEALTH_MODE=true
WEB_CONNECTOR_RANDOM_DELAYS=true
WEB_CONNECTOR_PROXY_ROTATION=false

# API Connector
API_CONNECTOR_DEFAULT_TIMEOUT=30
API_CONNECTOR_MAX_RETRIES=3
API_CONNECTOR_RETRY_BACKOFF=1.0

# Database Connector
DB_CONNECTOR_QUERY_TIMEOUT=300
DB_CONNECTOR_FETCH_SIZE=1000
DB_CONNECTOR_DEFAULT_LIMIT=1000

# File Connector
FILE_CONNECTOR_MAX_FILE_SIZE_MB=100
FILE_CONNECTOR_CHUNK_SIZE=10000
FILE_CONNECTOR_PARALLEL_PROCESSING=true
FILE_CONNECTOR_MAX_WORKERS=4