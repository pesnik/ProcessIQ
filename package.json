{
  "name": "processiq-monorepo",
  "version": "0.1.0",
  "description": "ProcessIQ - Modern RPA + AI Automation Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:desktop\"",
    "dev:backend": "cd apps/backend && python -m uvicorn processiq.main:app --reload --host 0.0.0.0 --port 8000",
    "dev:desktop": "cd apps/desktop && pnpm run dev",
    "build": "pnpm run build:packages && pnpm run build:desktop && pnpm run build:backend",
    "build:packages": "cd packages/n8n-rpa-nodes && pnpm run build",
    "build:desktop": "cd apps/desktop && pnpm run build",
    "build:backend": "cd apps/backend && python -m build",
    "test": "pnpm run test:packages && pnpm run test:desktop && pnpm run test:backend",
    "test:packages": "cd packages/n8n-rpa-nodes && pnpm test",
    "test:desktop": "cd apps/desktop && pnpm test",
    "test:backend": "cd apps/backend && pytest",
    "lint": "pnpm run lint:packages && pnpm run lint:desktop && pnpm run lint:backend",
    "lint:packages": "cd packages/n8n-rpa-nodes && pnpm run lint",
    "lint:desktop": "cd apps/desktop && pnpm run lint",
    "lint:backend": "cd apps/backend && flake8 src/processiq",
    "format": "pnpm run format:packages && pnpm run format:desktop && pnpm run format:backend",
    "format:packages": "cd packages/n8n-rpa-nodes && pnpm run format",
    "format:desktop": "cd apps/desktop && pnpm run format",
    "format:backend": "cd apps/backend && black src/ && isort src/",
    "clean": "pnpm run clean:packages && pnpm run clean:desktop && pnpm run clean:backend",
    "clean:packages": "cd packages/n8n-rpa-nodes && rm -rf dist node_modules",
    "clean:desktop": "cd apps/desktop && rm -rf dist node_modules",
    "clean:backend": "cd apps/backend && rm -rf dist build *.egg-info",
    "setup": "pnpm install && cd packages/n8n-rpa-nodes && pnpm install && cd ../../apps/backend && pip install -e .[dev,vision]",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "apps/desktop/**/*.{js,ts,tsx}": [
      "cd apps/desktop && pnpm run format",
      "cd apps/desktop && pnpm run lint"
    ],
    "apps/backend/**/*.py": [
      "cd apps/backend && black .",
      "cd apps/backend && isort .",
      "cd apps/backend && flake8"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pesnik/ProcessIQ.git"
  },
  "keywords": [
    "rpa",
    "automation",
    "ai",
    "vision-language",
    "workflow",
    "data-processing",
    "electron",
    "fastapi"
  ],
  "author": "ProcessIQ Team",
  "license": "MIT"
}